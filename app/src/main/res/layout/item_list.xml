<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:background="@color/primary"
        android:baselineAligned="false"
        android:elevation="5dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"

                android:layout_height="wrap_content"

                android:layout_marginStart="12dp"

                android:background="@color/primary_light"

                android:backgroundTint="@color/primary_light"

                android:backgroundTintMode="add"
                app:cardBackgroundColor="#00FFFFFF"
                app:cardCornerRadius="18dp"
                app:cardElevation="2dp"
                app:cardPreventCornerOverlap="false"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">


                <ImageView

                    android:layout_width="50dp"

                    android:layout_height="50dp"

                    android:layout_margin="0dp"

                    android:background="@drawable/actor_chaplin_comedy_man"

                    android:contentDescription="Avatar"
                    android:src="@drawable/actor_chaplin_comedy_man" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Usuario"
                android:textAlignment="center" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="12dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textViewTitulo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="Titulo" />

                <TextView
                    android:id="@+id/edadPet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_weight="1"
                    android:text="22/10/2020"
                    android:textAlignment="center" />
            </LinearLayout>

            <TextView
                android:id="@+id/estatusPet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="  Lorem ipsum dolor sit amet, consectetur adipiscing elit. Ut ac risus nisl. Sed quis elit nec augue condimentum ultricies eget ut nisi. Morbi vehicula rhoncus justo. Ut molestie egestas diam et sagittis. Lorem ipsum dolor sit amet, consectetur adipiscing elit. Duis eleifend enim vitae orci scelerisque, nec laoreet orci aliquam. " />

        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>